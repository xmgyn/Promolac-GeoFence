<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:weightSum="50"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/vrc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="8dp"
        android:layout_weight="50"
        app:cardCornerRadius="16dp">


        <ImageView
            android:id="@+id/imagesubscribe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="center"
            android:src="@drawable/grocery_store" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#9D000000"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/subscribeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="Zara Men"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/subscribedescription"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:fontFamily="@font/calibri"
                    android:text="Best Men Ware"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/subscribe"
                    android:layout_gravity="right"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:src="@drawable/subscribe" />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
